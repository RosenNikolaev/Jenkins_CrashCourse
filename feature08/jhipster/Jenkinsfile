pipeline {
    agent any 
    // Create an env variable which takes the git commit string up to the 6th symbol
    environment {
        HEADHASH = "${GIT_COMMIT.substring(0, 6)}"
    } 
    stages {
        stage('Check Environment') {
            steps {
                sh "ls -la"
                sh "pwd"
                sh "ls -la ./feature08/jhipster/ && pwd"
                sh "whoami"
            }
        }
        stage('Build') {
            steps{
              // Set the username and passwrod from your credentials manager 
                // Change the credentialsId: '' string to the ID you set in your Jenkins Credentials for dockerhub
              withCredentials([usernamePassword(credentialsId: 'rnikolaev-dockerhub', usernameVariable: 'REGISTRY_CREDS_USR', passwordVariable: 'REGISTRY_CREDS_PSW')]) {
                // Make mvnw executable
                sh "chmod +x ./feature08/jhipster/mvnw"
                // Navigate to the jhipster folder and execute the mvnw command 
                  // You push the container generated by mvnw to dockerhub with the tags latest and $HEADHASH (the git commit string up to the 6th symbol)
                sh "cd ./feature08/jhipster/ && ./mvnw -Pprod clean package jib:build -Djib.to.auth.username=$REGISTRY_CREDS_USR -Djib.to.auth.password=$REGISTRY_CREDS_PSW -Dimage=registry.hub.docker.com/android2e/jhipster:latest -Djib.to.tags=$HEADHASH -DskipTests"
              }
            } 
        }
    }
  post {
    always {
      node ('built-in'){
        sh 'docker ps'
        sh 'docker image ls'
        // Remove the image build by the mvnw command from your local docker environment
        sh 'docker image rm android2e/jhipster:latest android2e/jhipster:${HEADHASH}'
        sh 'docker image ls'
        sh 'docker volume ls'
      }

    }
  }

}